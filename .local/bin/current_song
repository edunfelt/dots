#!/bin/sh

main() {
  artist=$(playerctl -i Bose_QC35_II metadata artist)
  album=$(playerctl -i Bose_QC35_II metadata album)
  title=$(playerctl -i Bose_QC35_II metadata title)

  echo "${*:-%artist% ~ %title%}" | sed "s/%artist%/$artist/g;s/%title%/$title/g;s/%album%/$album/g"i | sed "s/\&/\&/g" | sed "s#\/#\/#g"

}

main "$@"

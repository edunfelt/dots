#!/bin/bash
# Manage my common monitor settings using xrandr
case "$1" in
    hdmi  )   
        xrandr --output eDP-1 --off --output HDMI-1 --mode 2560x1440 --primary --auto 
        ;;
    right )   
        xrandr --output eDP-1 --mode 1920x1080 --right-of HDMI-1 --output HDMI-1 --mode 2560x1440 --primary --auto 
        ;;
    left  )   
        xrandr --output eDP-1 --mode 1920x1080 --left-of HDMI-1 --output HDMI-1 --mode 2560x1440 --primary --autor 
        ;;
    none  )   
        xrandr --output eDP-1 --mode 1920x1080 --primary --auto --output HDMI-1 --off 
        ;;
    *     )
        echo "Valid options are hdmi, right, left, or none."
        ;;
esac
